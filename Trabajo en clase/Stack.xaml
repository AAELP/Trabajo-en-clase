<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trabajo_en_clase.Stack"
             Title="Combined StackLayouts demo">
    <ScrollView>
    <StackLayout Margin="20"
                 Orientation="Vertical"
                 HorizontalOptions="Center">
        <Label Text="Tercero"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="Title"
               HeightRequest="100"/>
        <Label Text="Segundo"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="Subtitle"
               HeightRequest="100"/>
        <Label Text="Primero"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="Small"
               HeightRequest="100"/>
        <Button
            x:Name="CounterBtn"
            Text="Siguiente" 
            SemanticProperties.Hint="Se dirige a Flex Layout"
            Clicked="OnFinalButtonClick"
            HorizontalOptions="Fill"
            HeightRequest="100"/>
    </StackLayout>
</ScrollView>
</ContentPage>